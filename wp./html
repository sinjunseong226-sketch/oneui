    <script>
        const secret = "ep129d9";
        const BAN_TIME = 12 * 60 * 60 * 1000;
        const keys = ['_cache_id', 'sys_pref', 'tmp_auth', 'net_config', 'app_data'];

        let mouseMoved = false;
        let isMobile = false;
        let lastMoveTime = Date.now();

        const setMoved = () => { mouseMoved = true; lastMoveTime = Date.now(); };
        const setMobile = () => { isMobile = true; mouseMoved = true; };
        window.addEventListener('mousemove', setMoved);
        window.addEventListener('touchstart', setMobile);

        function getBanStatus() {
            let latestBan = 0;
            keys.forEach(k => {
                const val = localStorage.getItem(k);
                if (val) latestBan = Math.max(latestBan, Number(val));
            });
            return latestBan;
        }

        function setBanStatus(time) {
            keys.forEach(k => localStorage.setItem(k, time));
        }

        const currentBan = getBanStatus();
        if (currentBan > Date.now()) setBanStatus(currentBan);

        function check() {
            const now = Date.now();
            let fails = (Number(localStorage.getItem("fail_count")) || 0);

            if (!isMobile && (!mouseMoved || (now - lastMoveTime < 10))) {
                fails++;
                localStorage.setItem("fail_count", fails);
                document.getElementById('chance').innerText = Math.max(0, 3 - fails);
                alert("ë¹„ì •ìƒì ì¸ ì›€ì§ì„ì´ ê°ì§€ë˜ì—ˆìŠµë‹ˆë‹¤.");
                if (fails >= 3) {
                    setBanStatus(now + BAN_TIME);
                    localStorage.setItem("ban_msg", "ë³´ì•ˆ ì •ì±… ìœ„ë°˜ (ë§¤í¬ë¡œ ì˜ì‹¬)");
                    location.reload();
                }
                return;
            }

            if (document.getElementById('ans').value.toLowerCase() === secret) {
                localStorage.setItem("fail_count", 0);
                localStorage.setItem("auth_pass", now + 600000);
                keys.forEach(k => localStorage.removeItem(k));
                document.getElementById('captcha-ui').style.display = 'none'; 
                document.getElementById('main-ui').style.display = 'flex'; 
            } else {
                fails++;
                localStorage.setItem("fail_count", fails);
                document.getElementById('chance').innerText = Math.max(0, 3 - fails);
                if (fails >= 3) {
                    setBanStatus(now + BAN_TIME);
                    localStorage.setItem("ban_msg", "ì¸ì¦ 3íšŒ ì‹¤íŒ¨");
                    location.reload();
                } else { 
                    alert("ì½”ë“œê°€ í‹€ë ¸ìŠµë‹ˆë‹¤."); 
                    document.getElementById('ans').value = ""; 
                }
            }
        }

        document.getElementById('submit-btn').addEventListener('click', check);

        window.onload = () => {
            const now = Date.now();
            const banUntil = getBanStatus();
            const authPass = Number(localStorage.getItem("auth_pass"));

            if (banUntil && now < banUntil) {
                document.getElementById('captcha-ui').style.display = 'none';
                document.getElementById('ban-ui').style.display = 'flex';
                document.getElementById('ban-reason').innerText = localStorage.getItem("ban_msg");
                const itv = setInterval(() => {
                    const rem = Math.ceil((banUntil - Date.now()) / 1000);
                    if (rem <= 0) { 
                        clearInterval(itv);
                        keys.forEach(k => localStorage.removeItem(k));
                        localStorage.setItem("fail_count", 0);
                        location.reload(); 
                    }
                    const h = Math.floor(rem / 3600); const m = Math.floor((rem % 3600) / 60); const s = rem % 60;
                    document.getElementById('timer').innerText = `${h}h ${m}m ${s}s left`;
                }, 1000);
            } else if (authPass && now < authPass) {
                document.getElementById('captcha-ui').style.display = 'none';
                document.getElementById('main-ui').style.display = 'flex';
            }
        };
    </script>
